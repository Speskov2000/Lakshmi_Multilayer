@model IEnumerable<Lakshmi.BLL.DTO.UserDTO>
@{
    ViewBag.Title = "Поиск пользователей";
}

<form style="display: flex; flex-direction:column; align-items: flex-start;" asp-controller="Home" asp-action="FindUsers">
    <h2>Страницы пользователей</h2>
    <p>
        <input type="text" name="fullName" value="@ViewBag.Name"> - Введите имя или никнейм пользователя
    </p>
    <p><input type="submit" value="Filter" /></p>
</form>

<div style="display:flex; font-size: 1.5em; width: 100%; height: 60px;  border-top: 1px solid #5f5f5f; justify-content: space-between;">

    <strong style="font-size: 1em; width:30%;">
       Cписок пользователей:
    </strong>
    <p style="font-size: 1em; width:30%;"></p>
</div>
@foreach (var item in Model)
{
<div style="display:flex; font-size: 1.1em; width: 100%; height: 80px; border-top: 1px solid #5f5f5f; justify-content: space-around; align-items: center;">
    @if (item.UserpicMini != null)
    {
        <div class="div-avatar-mini">
            @Html.Raw("<img class=\"photo-avatar\" src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(item.UserpicMini) + "\" />")
        </div>
    }
    <p style="width:30%; font-size: 1.1em;">
        @item.FirstName @item.SecondName
    </p>
    <strong style="font-size: 1em; width:30%;">@Html.DisplayFor(modelItem => item.NickName):</strong>
    <p style="width:30%; font-size: 1.1em;">
        <a href="@Url.Action("Page", "Home", new { id = item.Id})">Cтраница юзера</a>
    </p>
</div>
}
